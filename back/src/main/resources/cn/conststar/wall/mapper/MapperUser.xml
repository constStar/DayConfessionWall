<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.conststar.wall.mapper.MapperUser">

    <select id="getUser" resultType="PojoUser">
        select *
        from `user`
        where token = #{token};
    </select>

    <sql id="whereid">
            (email = #{id} or CAST(id AS char) = #{id})
    </sql>


    <select id="getUserPublic" resultType="PojoUserPublic">
        select *
        from `user`
        where id = #{id};
    </select>

    <insert id="addUserByEmail">
        insert into `user` (email, password, name, status, last_time, create_time)
        values (#{email}, password(#{password}), #{status}, #{name}, now(), now());
    </insert>

    <insert id="addUserByWeChat">
        insert into `user` (wechat, name, password, status, last_time, create_time)
        values (#{openId}, #{name}, password(#{password}), #{status}, now(), now());
    </insert>

    <select id="findUserByEmail" resultType="PojoUser">
        select *
        from `user`
        where email = #{email};
    </select>

    <select id="findUser" resultType="PojoUser">
        select *
        from `user`
        where <include refid="whereid"></include>;
    </select>

    <select id="findUserByWeChat" resultType="PojoUser">
        select *
        from `user`
        where wechat = #{openId};
    </select>

    <update id="bindWeChat">
        update `user`
        set wechat = #{openId}
        where <include refid="whereid"></include>;
    </update>

    <update id="login">
        update `user`
        set `last_time`= now(),
        `token` = #{token}
        where
        <include refid="whereid"></include>
        and password = password(#{password});
    </update>

    <update id="loginByWeChat">
        update `user`
        set `last_time`= now(),
            `token`    = #{token}
        where wechat = #{openId};
    </update>

    <update id="logout">
        update `user`
        set `last_time`= now(),
            token      = null
        where token = #{token};
    </update>
</mapper>