<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

    <mapper namespace="cn.conststar.wall.mapper.MapperComment">

<!--    <cache/>-->
    <!--获取帖子分页评论列表-->
    <select id="getCommentsLimit" resultType="PojoComment">
        select * from `comment` where table_id=#{tableId} order by create_time DESC limit #{startIndex},#{pageSize};
    </select>

    <!--获取帖子评论总数量-->
    <select id="getCount" parameterType="_int" resultType="_int">
        select count(1) from `comment` where table_id=#{tableId};
    </select>

    <!--添加帖子评论-->
    <insert id="addComment" parameterType="PojoComment">
        insert into `comment` (table_id,name,create_time,content)
        value (#{tableId},#{name},now(),#{content});
    </insert>
</mapper>